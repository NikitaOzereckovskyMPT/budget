<Window
    x:Class="Budget.CreateEntryType"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Budget"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Добавить тип"
    Width="300"
    Height="160"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                Text="Введите тип добавляемой записи" />
            <TextBox Name="txt_nameEnrty" Margin="0,0,0,10" />
            <Button Name="btn_createEntryType" Content="Добавить новый тип" Click="btn_createEntryType_Click" />
        </StackPanel>
    </Grid>
</Window>
